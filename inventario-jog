/*
 * Sistema de Inventário - Jogo de Sobrevivência
 * 
 * Este programa simula um sistema de inventário (mochila) para um jogo
 * de sobrevivência, permitindo gerenciar itens coletados pelo jogador.
 * 
 * Funcionalidades:
 * - Cadastrar até 10 itens
 * - Remover itens por nome
 * - Listar todos os itens
 * - Buscar item específico
 */

#include <stdio.h>
#include <string.h>
#include <stdlib.h>

// Definição da estrutura Item que representa cada objeto no inventário
typedef struct {
    char nome[30];      // Nome do item (ex: "Pistola", "Bandagem")
    char tipo[20];      // Tipo do item (ex: "arma", "munição", "cura")
    int quantidade;     // Quantidade disponível do item
} Item;

// Constantes do sistema
#define MAX_ITENS 10
#define LIMPAR_BUFFER while(getchar() != '\n')

// Variáveis globais
Item mochila[MAX_ITENS];  // Vetor que armazena até 10 itens
int totalItens = 0;        // Contador de itens atualmente na mochila

// Protótipos das funções
void exibirMenu();
void inserirItem();
void removerItem();
void listarItens();
void buscarItem();
void limparTela();
void pausar();

/*
 * Função principal - Controla o fluxo do programa
 */
int main() {
    int opcao;
    
    printf("========================================\n");
    printf("    BEM-VINDO AO SISTEMA DE INVENTÁRIO\n");
    printf("       JOGO DE SOBREVIVÊNCIA v1.0\n");
    printf("========================================\n\n");
    
    do {
        exibirMenu();
        printf("Digite sua opção: ");
        scanf("%d", &opcao);
        LIMPAR_BUFFER;
        
        switch(opcao) {
            case 1:
                inserirItem();
                break;
            case 2:
                removerItem();
                break;
            case 3:
                listarItens();
                break;
            case 4:
                buscarItem();
                break;
            case 5:
                printf("\n[!] Saindo do sistema...\n");
                printf("Boa sorte na sua jornada de sobrevivência!\n");
                break;
            default:
                printf("\n[ERRO] Opção inválida! Tente novamente.\n");
                pausar();
        }
    } while(opcao != 5);
    
    return 0;
}

/*
 * Exibe o menu principal com as opções disponíveis
 */
void exibirMenu() {
    limparTela();
    printf("========================================\n");
    printf("         MOCHILA DE INVENTÁRIO\n");
    printf("========================================\n");
    printf("Capacidade: %d/%d itens\n", totalItens, MAX_ITENS);
    printf("----------------------------------------\n");
    printf("[1] Adicionar Item\n");
    printf("[2] Remover Item\n");
    printf("[3] Listar Todos os Itens\n");
    printf("[4] Buscar Item Específico\n");
    printf("[5] Sair do Sistema\n");
    printf("========================================\n");
}

/*
 * Função para inserir um novo item na mochila
 * Verifica se há espaço disponível antes de adicionar
 */
void inserirItem() {
    limparTela();
    printf("========================================\n");
    printf("         ADICIONAR NOVO ITEM\n");
    printf("========================================\n\n");
    
    // Verifica se a mochila está cheia
    if(totalItens >= MAX_ITENS) {
        printf("[ERRO] Mochila cheia! Máximo de %d itens atingido.\n", MAX_ITENS);
        printf("Remova alguns itens antes de adicionar novos.\n");
        pausar();
        return;
    }
    
    Item novoItem;
    
    // Coleta dados do novo item
    printf("Nome do item: ");
    fgets(novoItem.nome, 30, stdin);
    novoItem.nome[strcspn(novoItem.nome, "\n")] = '\0'; // Remove quebra de linha
    
    printf("Tipo (arma/munição/cura/ferramenta/outro): ");
    fgets(novoItem.tipo, 20, stdin);
    novoItem.tipo[strcspn(novoItem.tipo, "\n")] = '\0';
    
    printf("Quantidade: ");
    scanf("%d", &novoItem.quantidade);
    LIMPAR_BUFFER;
    
    // Adiciona o item na mochila
    mochila[totalItens] = novoItem;
    totalItens++;
    
    printf("\n[SUCESSO] Item '%s' adicionado com sucesso!\n", novoItem.nome);
    printf("\n--- Inventário Atualizado ---\n");
    listarItens();
}

/*
 * Remove um item da mochila baseado no nome fornecido
 * Reorganiza o array após a remoção para evitar espaços vazios
 */
void removerItem() {
    limparTela();
    printf("========================================\n");
    printf("           REMOVER ITEM\n");
    printf("========================================\n\n");
    
    // Verifica se há itens para remover
    if(totalItens == 0) {
        printf("[INFO] A mochila está vazia. Não há itens para remover.\n");
        pausar();
        return;
    }
    
    char nomeRemover[30];
    printf("Digite o nome do item a remover: ");
    fgets(nomeRemover, 30, stdin);
    nomeRemover[strcspn(nomeRemover, "\n")] = '\0';
    
    int indiceRemover = -1;
    
    // Busca o item pelo nome
    for(int i = 0; i < totalItens; i++) {
        if(strcmp(mochila[i].nome, nomeRemover) == 0) {
            indiceRemover = i;
            break;
        }
    }
    
    // Se encontrou o item, remove-o
    if(indiceRemover != -1) {
        // Reorganiza o array, movendo os itens posteriores uma posição para frente
        for(int i = indiceRemover; i < totalItens - 1; i++) {
            mochila[i] = mochila[i + 1];
        }
        totalItens--;
        
        printf("\n[SUCESSO] Item '%s' removido com sucesso!\n", nomeRemover);
        printf("\n--- Inventário Atualizado ---\n");
        listarItens();
    } else {
        printf("\n[ERRO] Item '%s' não encontrado na mochila.\n", nomeRemover);
        pausar();
    }
}

/*
 * Lista todos os itens presentes na mochila
 * Exibe nome, tipo e quantidade de cada item
 */
void listarItens() {
    printf("\n========================================\n");
    printf("        ITENS NA MOCHILA (%d/%d)\n", totalItens, MAX_ITENS);
    printf("========================================\n");
    
    if(totalItens == 0) {
        printf("\n[INFO] A mochila está vazia.\n");
        printf("Colete alguns itens para começar!\n");
    } else {
        printf("\n%-3s | %-20s | %-12s | %-8s\n", "ID", "NOME", "TIPO", "QUANTIDADE");
        printf("----------------------------------------------------\n");
        
        for(int i = 0; i < totalItens; i++) {
            printf("%-3d | %-20s | %-12s | %-8d\n", 
                   i + 1, 
                   mochila[i].nome, 
                   mochila[i].tipo, 
                   mochila[i].quantidade);
        }
        
        // Calcula estatísticas
        int totalQtd = 0;
        for(int i = 0; i < totalItens; i++) {
            totalQtd += mochila[i].quantidade;
        }
        
        printf("----------------------------------------------------\n");
        printf("Total de itens únicos: %d\n", totalItens);
        printf("Total de unidades: %d\n", totalQtd);
    }
    
    pausar();
}

/*
 * Busca sequencial - Procura um item específico pelo nome
 * Exibe todas as informações do item se encontrado
 */
void buscarItem() {
    limparTela();
    printf("========================================\n");
    printf("          BUSCAR ITEM\n");
    printf("========================================\n\n");
    
    if(totalItens == 0) {
        printf("[INFO] A mochila está vazia. Não há itens para buscar.\n");
        pausar();
        return;
    }
    
    char nomeBusca[30];
    printf("Digite o nome do item a buscar: ");
    fgets(nomeBusca, 30, stdin);
    nomeBusca[strcspn(nomeBusca, "\n")] = '\0';
    
    int encontrado = 0;
    
    // Realiza busca sequencial no array
    for(int i = 0; i < totalItens; i++) {
        if(strcmp(mochila[i].nome, nomeBusca) == 0) {
            printf("\n[SUCESSO] Item encontrado!\n");
            printf("========================================\n");
            printf("Detalhes do Item:\n");
            printf("----------------------------------------\n");
            printf("Nome:       %s\n", mochila[i].nome);
            printf("Tipo:       %s\n", mochila[i].tipo);
            printf("Quantidade: %d\n", mochila[i].quantidade);
            printf("Posição:    %d de %d\n", i + 1, totalItens);
            printf("========================================\n");
            encontrado = 1;
            break;
        }
    }
    
    if(!encontrado) {
        printf("\n[ERRO] Item '%s' não encontrado na mochila.\n", nomeBusca);
        printf("Verifique o nome e tente novamente.\n");
    }
    
    pausar();
}

/*
 * Limpa a tela do console para melhor visualização
 * Compatível com Windows e Linux/Mac
 */
void limparTela() {
    #ifdef _WIN32
        system("cls");
    #else
        system("clear");
    #endif
}

/*
 * Pausa a execução aguardando o usuário pressionar Enter
 */
void pausar() {
    printf("\nPressione ENTER para continuar...");
    getchar();
}